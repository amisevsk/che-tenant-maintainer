<?xml version="1.0" encoding="utf-8"?>
<restrict>
    <commands>
        <command>read</command>
        <command>list</command>
        <command>version</command>
        <command>search</command>
    </commands>
    <allow>
        <mbean>
            <name>java.lang:type=Memory</name>
            <operation>gc</operation>
        </mbean>
    </allow>
</restrict>
